name: Testing comment
on: 
    pull_request: 
        paths: 
        - starkmatt/**
jobs:
    comment:
        name: Commenter
        runs-on: ubuntu-latest
        steps:
            - uses: mshick/add-pr-comment@v1
              with:
                  repo-token: ${{ secrets.GITHUB_TOKEN }}
                  message: Well done Matteh
                  allow-repeats: false
